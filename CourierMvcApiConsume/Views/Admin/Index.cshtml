@model IEnumerable<CourierMvcApiConsume.Models.User>

@{
    ViewData["Title"] = "AllTrack";
    Layout = "_LayoutAdmin";
}


@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
        <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
    </div>
}

<hr class="hr_style" />
    * Click on the <strong>View</strong> In Each RoleTo Add History To Your Shipment.
<br />
   <br />
<button class="btn text-white">
    @Html.ActionLink("Add New Track", "AddTrack", "Admin")
</button>

<hr class="hr_style" />

<br />

<table class="table table-responsive table-striped table-bordered">

    <thead>
        <tr>
            <th>S/N</th>
            <th>Tracking Code</th>
            <th>Receiver Contact</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var user in Model) {
            <tr>
                <td>@Html.ActionLink("View", "Index", "AdminTrack", new { id = user.Id }) </td>
                <td>@user.TrackId</td>
                <td>@user.ReceiverContact</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = user.Id }) 
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = user.Id }) 
                </td>
            </tr>
        }
    </tbody>

</table>


